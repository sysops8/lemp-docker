services:
  nginx:
    build: ./nginx
    ports:
      - "8080:80"
    volumes:
      - ./www:/var/www/html:z
    depends_on:
      - php
    networks:
      - frontend
  
  php:
    build: ./php
    volumes:
      - ./www:/var/www/html:z
    networks:
      - frontend
      - backend
    environment:
      - DB_HOST=mysql
      - DB_NAME=testdb
      - DB_USER=user
      - DB_PASSWORD=password
  
  mysql:
    image: mysql:8.0
    environment:
      MYSQL_ROOT_PASSWORD: rootpass
      MYSQL_DATABASE: testdb
      MYSQL_USER: user
      MYSQL_PASSWORD: password
    volumes:
      - mysql-data:/var/lib/mysql
    networks:
      - backend

networks:
  frontend:
  backend:

volumes:
  mysql-data:
